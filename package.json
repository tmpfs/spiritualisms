{
  "name": "spiritualisms",
  "version": "1.0.0",
  "description": "Spiritualisms web application, daily awakening",
  "author": "muji",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tmpfs/spiritualisms"
  },
  "bugs": {
    "url": "https://github.com/tmpfs/spiritualisms/issues"
  },
  "keywords": [
    "spiritual",
    "quote",
    "web app",
    "rest",
    "service"
  ],
  "dependencies": {
    "air": "~0.4.9",
    "async-validate": "~0.13.0",
    "body-parser": "~1.14.2",
    "cdb": "~0.3.4",
    "emanate": "~1.2.1",
    "express": "~5.0.0-alpha.2",
    "hiredis": "~0.4.1",
    "jade": "~1.11.0",
    "lockfile": "~1.0.1",
    "nenv": "~0.5.1",
    "pdfkit": "~0.7.2",
    "redis": "~2.4.2",
    "tempfile": "~1.1.1",
    "vivify": "~0.2.4"
  },
  "devDependencies": {
    "browser-sync": "~2.11.1",
    "browserify": "~13.0.0",
    "chai": "~3.5.0",
    "chokidar": "~1.4.2",
    "comment-parser": "~0.3.1",
    "coveralls": "~2.11.6",
    "crawl": "~0.3.1",
    "istanbul": "~0.4.2",
    "mocha": "~2.4.5",
    "request": "~2.69.0",
    "stylus": "~0.53.0",
    "uglifyjs": "~2.4.10"
  },
  "scripts": {
    "sync": "node sync.js",
    "lint": "jshint . && jscs .",
    "readme": "mk readme --force",
    "clean": "rm -rf coverage",
    "css": "stylus -o www/public/assets/css www/css/style.styl",
    "standalone": "stylus -c -o www/public/assets/css www/css/standalone.styl",
    "api": "node api-server.js",
    "file": "node file-server.js",
    "www": "node www-server.js",
    "compile": "NODE_PATH=.:./node_modules/air/lib:./node_modules/vivify/lib browserify -o www/public/assets/js/app.js -r air www/lib/main.js",
    "minify": "npm run compile && uglifyjs -o www/public/assets/js/app.js www/public/assets/js/app.js",
    "teardown": "./sbin/teardown :lh",
    "bootstrap": "./sbin/bootstrap :lh",
    "test": "NODE_ENV=test mocha test/global ${SPEC:-test/spec}",
    "cover": "NODE_ENV=test istanbul cover _mocha -- test/global ${SPEC:-test/spec}",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  }
}
