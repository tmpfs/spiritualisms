include ./quote-toolbar

mixin quotation(doc, opts)
  - opts = opts || {};
  - var title = doc.title || (doc.author + ' (' + doc.domain + ')');
  div.quotation
    blockquote.primary #{doc.quote}
    cite.primary &#151; 
      - if(doc.link) {
        a(href=doc.link, title=title) #{doc.author}
      - }else{
        span #{doc.author} 
      - }
    +quote-toolbar(doc)
