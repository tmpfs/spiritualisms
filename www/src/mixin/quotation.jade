mixin quotation(doc, opts)
  - opts = opts || {};
  - var title = doc.title || (doc.author + ' (' + doc.domain + ')');
  div.quotation
    blockquote.primary(id=doc._id) #{doc.quote}
    cite.primary &#151; 
      - if(doc.link) {
        a(href=doc.link, title=title) #{doc.author}
      - }else{
        span #{doc.author} 
      - }
  - if(opts.more) {
    footer.quote
      nav
        a.refresh(href='/',title='Get more inspiration')
          i.fa.fa-refresh
        - if(opts.browser) {
          a.home(
            href='/home',
            title='Browser home page')
            i.fa.fa-home
        - }
        - if(opts.home) {
          a.home(
            href='/',
            title='Website home page')
            i.fa.fa-home
        - }
        a.love(href='/love/' + doc._id, title='Love it')
          i.fa.fa-heart.love
        a.star(href='/star/' + doc._id, title='Star it')
          i.fa.fa-star.star
        a.permalink(href='/inspire/' + doc._id, title='View it')
          i.fa.fa-link.permalink
        - if(opts.sitemap) {
          a.sitemap(href='/sitemap', title='Site map')
            i.fa.fa-sitemap.sitemap
        - }
  - }

