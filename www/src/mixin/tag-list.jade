mixin tag-list(tags, section)
  - var i, key, value;
  - for(var i = 0;i < tags.rows.length;i++) {
    - title = tags.rows[i].title;
    - key = tags.rows[i].key;
    - key = key.toLowerCase();
    - value = tags.rows[i].value;
    a(href='/explore/' + section + '/' + encodeURIComponent(key),
      title=title + (value ? ' (' + value + ')' : ''))
      | #{title}
    - if(i < (tags.rows.length - 1)) {
      | , 
    - }
  - }
