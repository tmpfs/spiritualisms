mixin quote-listing(quotes)
  - var rows = quotes.rows, doc;
  - for(var i = 0;i < rows.length;i++) {
    - doc = rows[i].doc;
    - if(Array.isArray(doc.author)) {
      - doc.author = doc.author.join(' & ');
    - }
    .quotation.item(data-id=doc.id)
      blockquote.primary #{doc.quote} 
      div.meta.clearfix
        cite.float-left &#8212;
          - if(doc.link) {
            a(href=doc.link) #{doc.author}
            - if(doc.domain) {
              span  (#{doc.domain})
            - }
          - }else {
            span #{doc.author}
          - }
        +quote-toolbar(doc, {permalink: true})
  - }
