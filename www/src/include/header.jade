mixin main-nav(uri)
  - var map = {}, keys, i;
  - map.why = {title: 'Why this page exists', text: 'Why?'};
  - map.explore = {title: 'Browse the quotes', text: 'Explore'};
  - map.contribute = {title: 'Find out how to contribute', text: 'Contribute'};
  - map.create = {title: 'Create a quote', text: 'Create'};
  - keys = Object.keys(map);
  nav.icon.float-right
    a.stars(href='/stars', title='Stars')
      i.fa.fa-star
    a.home(href='/home', title='Browser Home')
      i.fa.fa-home
    a.sitemap(href='/sitemap', title='Sitemap')
      i.fa.fa-sitemap
  nav.main.float-right
    - for(i = 0;i < keys.length;i++) {
      a(href="/" + keys[i],
        title=map[keys[i]].title,
        class=uri.pathname.indexOf('/' + keys[i]) === 0 ? 'selected' : null)
        | #{map[keys[i]].text}
    - }

header.clearfix
  a.logo.float-left(href='/')
    img.logo(src='/assets/img/logo.png', alt='Spiritualisms: daily awakening')
  +main-nav(uri)
