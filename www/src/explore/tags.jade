extends ../layout

include ../mixin/quote-toolbar

block content
  section.browse.page
    h2 Tags
    .listing
      p.all-tags
        - var i, key, value;
        - for(var i = 0;i < tags.rows.length;i++) {
          - key = tags.rows[i].key;
          - value = tags.rows[i].value;
          a(href='/explore/tags/' + key, title=key + ' (' + value + ')')
            | #{key}
          | , 
        - }
