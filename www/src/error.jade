extends layout

block content
  pre !{JSON.stringify(env)}
  section.error.page
    h2 #{status}
    - if(env.production) {
      pre.error
        | !{message}
    - }else{
      - if(doc) {
        pre.error
          | !{JSON.stringify(doc, undefined, 2)}
      - }
      - if(res && process.env.NODE_ENV !== 'production') {
        pre.error
          | !{JSON.stringify(res, undefined, 2)}
      - }
      - if(stack) {
        pre.error
          | !{stack}
      - }
    - }
