extends layout

block content
  section.browse
    h2 Inspire
    //-pre
      //-| !{JSON.stringify(quotes)}
    - var rows = quotes.rows;
    - for(var i = 0;i < rows.length;i++) {
      div.item
        blockquote #{rows[i].doc.quote} 
        div.meta.clearfix
          cite.float-left &#151;
            a(href=rows[i].doc.link) #{rows[i].doc.author}
            span  (#{rows[i].doc.domain})
          nav.float-right
            a(href='/inspire/' + rows[i].doc._id title='Permalink') Permalink
    - }
