svg path // or rect, circle, etc
  shape-rendering: auto;

.swatches
  position: fixed;
  z-index: 2;
  left: 0;
  bottom: 0;
  padding: 0 0 0.5rem 1rem;
  margin: 0;
  a.swatch
    display: inline-block;
    vertical-align: bottom;
    width: 16px;
    height: 16px;
    border-radius: 8px;
    padding: 0;
    svg
      stroke: $black;
      stroke-width: 2;
    svg.pure
      fill: #fff;
    svg.survival
      fill: #ff0000;
    svg.sexuality
      fill: #ff0000;
    &:not(:last-child)
      margin-right: 0.5rem;
