svg path // or rect, circle, etc
  shape-rendering: auto;

.swatches
  position: fixed;
  z-index: 2;
  left: 0;
  bottom: 0;
  padding: 0 0 7px 1rem;
  margin: 0;
  a.swatch
    display: inline-block;
    vertical-align: bottom;
    width: 16px;
    height: 16px;
    border-radius: 8px;
    padding: 0;
    opacity: 0.5;
    &:hover
      opacity: 1;
    svg
      stroke: $black;
      stroke-width: 2;
    svg.pure
      fill: white;
    svg.survival
      fill: orangered;
    svg.sexuality
      fill: orange;
    svg.power
      fill: yellow;
    svg.love
      fill: yellowgreen;
    svg.communication
      fill: paleturquoise;
    svg.intuition
      fill: lightsteelblue;
    svg.spirituality
        fill: $purple;
    &:not(:last-child)
      margin-right: 0.5rem;
