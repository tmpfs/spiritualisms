@import 'colors';

header
  background: $white;
  z-index: 1;
  height: 6rem; /* 60px */
  padding: 10px 10px 0 0;
  /*border-bottom: 1px solid black;*/
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  h1
    display: inline-block;
    margin: 0;
    padding: 0;
    height: 40px;
    position: absolute;
    // prevent a shift when rendering
    line-height: 0;
  img.logo
    width: 220px;
    height: 40px;
  a.selected
    padding-bottom: .3rem;
    border-bottom: .2rem solid #9b4dca;
  nav.main
    display: inline-block;
    a
      margin-left: 1rem;
  nav.icon
    background: $light;
    display: inline-block;
    height: 24px;
    padding: 0 4px;
    margin-left: 1rem;
    border-radius: 2px;
    a:not(:last-child)
      margin-right: .5rem;

