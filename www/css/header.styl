@import 'colors';

header
  background: $white;
  z-index: 1;
  height: 6rem; /* 60px */
  /*border-bottom: 1px solid black;*/
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  h1
    display: inline-block;
    margin: 0;
    padding: 0;
    height: 40px;
    position: absolute;
    // prevent a shift when rendering
    line-height: 0;
  a.logo
    display: inline-block;
    position: relative;
    left 1rem;
    top: 0.5rem;
    color: black;
    img.logo
      position: relative;
      width: 40px;
      height: 40px;
      top: 0;
      left: 0;
    span
      position: relative;
      font-size: 2rem;
      text-transform: uppercase;
      left: 5px;
      top: -20px;
    > .logo + span
      border-bottom: 1px solid black;
    > span:last-child
      font-size: 1.2rem;
      left: 45px;
      letter-spacing: 1.4px;
  a.selected
    padding-bottom: .3rem;
    border-bottom: .2rem solid #9b4dca;
  nav.main
    display: inline-block;
    padding: 1rem 1rem 0 0;
    a
      margin-left: 1rem;
  nav.icon
    background: $light;
    display: inline-block;
    height: 24px;
    margin: 1rem 1rem 1rem 0;
    border-radius: 2px;
    a:not(:last-child)
      margin-right: .5rem;

